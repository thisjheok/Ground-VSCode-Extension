{
  "name": "ground",
  "displayName": "Ground",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ground.startSession",
        "title": "Tool for Thought: Start Session"
      },
      {
        "command": "ground.session.new",
        "title": "Tool for Thought: Session - New"
      },
      {
        "command": "ground.session.switch",
        "title": "Tool for Thought: Session - Switch"
      },
      {
        "command": "ground.session.rename",
        "title": "Tool for Thought: Session - Rename Active"
      },
      {
        "command": "ground.session.archive",
        "title": "Tool for Thought: Session - Archive Active"
      },
      {
        "command": "ground.session.showHistory",
        "title": "Tool for Thought: Session - Show History"
      },
      {
        "command": "ground.showSession",
        "title": "Tool for Thought: Show Session (Debug)"
      },
      {
        "command": "ground.clearSession",
        "title": "Tool for Thought: Clear Session"
      },
      {
        "command": "ground.addEvidenceFromSelection",
        "title": "Tool for Thought: Evidence - Add from Selection"
      },
      {
        "command": "ground.addEvidenceFromActiveFile",
        "title": "Tool for Thought: Evidence - Add Active File"
      },
      {
        "command": "ground.addDiagnosticsEvidence",
        "title": "Tool for Thought: Evidence - Add Diagnostics"
      },
      {
        "command": "ground.ingestTestLog",
        "title": "Tool for Thought: Evidence - Ingest Test Log"
      },
      {
        "command": "ground.generateProvocationsMock",
        "title": "Tool for Thought: Provocation - Generate Mock Cards"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tftContainer",
          "title": "Tool for Thought",
          "icon": "media/tft.svg"
        }
      ]
    },
    "views": {
      "tftContainer": [
        {
          "id": "tft.outlineView",
          "name": "Outline",
          "type": "webview"
        },
        {
          "id": "tft.evidenceView",
          "name": "Evidence",
          "type": "webview"
        },
        {
          "id": "tft.provocationView",
          "name": "Provocations",
          "type": "webview"
        },
        {
          "id": "tft.sessionHistoryView",
          "name": "Session History",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
